\name{plot.ppci_hyperplane_solution}
\alias{plot.ppci_hyperplane_solution}
\title{Visualise a Hyperplane Separator for Clustering}
\description{
  Provides a visualisation of the partition induced by a hyperplane separator generated by one of mch, mdh and ncuth.
}
\usage{
\method{plot}{ppci_hyperplane_solution}(x, labels = NULL, ...)
}
\arguments{
  \item{x}{a solution arising from one of the functions mch, mdh and ncuth.}
  \item{labels}{(optional) a vector of class labels. if provided then points in different classes are plotted in different colours.}
  \item{...}{additional graphical parameters. Currently none implemented.}
}
\seealso{mch, mdh, ncuth, hp_plot}
\value{None}
\keyword{internal}
